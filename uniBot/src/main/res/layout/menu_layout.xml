<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/suspensions"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Suspensions"
                android:textColor="#4B4C4F" />

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/absences"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Absences"
                android:textColor="#4B4C4F" />

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/grades"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Grades"
                android:textColor="#4B4C4F" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/tasks"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Tasks"
                android:textColor="#4B4C4F" />

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/expenses"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Expenses"
                android:textColor="#4B4C4F" />

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/photos"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Photos"
                android:textColor="#4B4C4F" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/bills"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Bills"
                android:textColor="#4B4C4F" />

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/wtb"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Where to buy?"
                android:textColor="#4B4C4F" />

            <Button
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:id="@+id/events"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_rectangle_what_can_i_do"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Events"
                android:textColor="#4B4C4F" />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>